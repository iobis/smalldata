{
  "name": "smalldata",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/iobis/smalldata",
  "license": "MIT",
  "main": "index.js",
  "workspaces": [
    "admin-app",
    "dwca-lib",
    "occurrences-app"
  ],
  "scripts": {
    "build:back-end": "cd server && gradlew runtimeZip",
    "build:front-end": "run-s occurrences-app:build occurrences-app:copy-to-server",
    "build:zip": "run-s build:front-end build:back-end",
    "clean": "shx rm -rf ./occurrences-app/build ./server/src/main/resources/webroot/*",
    "occurrences-app:build": "yarn workspace @smalldata/occurrences-app build",
    "occurrences-app:copy-to-server": "shx mkdir -p ./server/src/main/resources/webroot/ && shx cp -rf ./occurrences-app/build/* ./server/src/main/resources/webroot/",
    "prettier": "prettier --print-width 100 --jsx-bracket-same-line --single-quote --no-semi --write **/*.{scss,css,json,js,jsx}",
    "sort-package-json": "sort-package-json package.json admin-app/package.json dwca-lib/package.json occurrences-app/package.json",
    "test:ci": "yarn test:front-end:ci && yarn test:server:ci",
    "test:front-end:ci": "yarn workspaces run test:ci",
    "test:server:ci": "cd server && gradle check --no-daemon"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "shx": "0.3.2",
    "sort-package-json": "1.22.1"
  }
}
