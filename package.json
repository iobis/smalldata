{
  "name": "smalldata",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/iobis/smalldata",
  "license": "MIT",
  "main": "index.js",
  "workspaces": [
    "admin-app",
    "dwca-lib",
    "occurrences-app"
  ],
  "scripts": {
    "prettier": "prettier --print-width 100 --jsx-bracket-same-line --single-quote --no-semi --write **/*.{scss,css,json,js,jsx}",
    "sort-package-json": "sort-package-json package.json admin-app/package.json dwca-lib/package.json occurrences-app/package.json",
    "test:front-end": "yarn workspaces run test",
    "test:server:ci": "cd server && gradle test --no-daemon",
    "test:ci": "yarn test:front-end && yarn test:server:ci"
  },
  "devDependencies": {
    "prettier": "1.16.4",
    "sort-package-json": "1.19.0"
  }
}
